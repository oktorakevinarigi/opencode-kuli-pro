{
  "$schema": "https://opencode.ai/config.json",
  "model": "google/gemini-3-pro-high",
  "plugin": [
    "oh-my-opencode",
    "./plugin/superpowers.js",
    "./plugin/kuli-pro-safety.js",
    "opencode-antigravity-auth@1.2.0",
    "@ramtinj95/opencode-tokenscope@latest",
    "opencode-skills"
  ],
  "provider": {
    "google": {
      "models": {
        "gemini-3-pro-high": {
          "name": "Gemini 3 Pro High (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gemini-3-pro-low": {
          "name": "Gemini 3 Pro Low (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gpt-oss-120b-medium": {
          "name": "GPT-OSS 120B Medium (Antigravity)",
          "limit": {
            "context": 131072,
            "output": 32768
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "shannon-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "server-shannon-thinking@latest"
      ],
      "enabled": true
    },
    "sequential-thinking-ultra": {
      "type": "local",
      "command": [
        "node",
        "/YOUR_PATH_TO/opencode/mcp/sequential-thinking-ultra/dist/index.js"
      ],
      "enabled": true,
      "environment": {
        "ULTRA_THINK_AUTO_LABEL": "true",
        "ULTRA_THINK_QUALITY": "true",
        "ULTRA_THINK_META": "true",
        "ULTRA_THINK_BUDGET": "true",
        "ENABLE_QUERY_REWRITING": "true",
        "DEFAULT_BUDGET_MODE": "balanced"
      }
    },
    "mcp-reasoner": {
      "type": "local",
      "command": [
        "node",
        "/YOUR_PATH_TO/opencode/mcp/mcp-reasoner/dist/index.js"
      ],
      "enabled": true,
      "environment": {
        "OPENROUTER_API_KEY": "{env:OPENROUTER_API_KEY}"
      }
    },
    "clear-thought": {
      "type": "local",
      "command": [
        "node",
        "/YOUR_PATH_TO/opencode/mcp/clear-thought-mcp-server/dist/index.js"
      ],
      "enabled": true
    },
    "atom-of-thoughts": {
      "type": "local",
      "command": [
        "node",
        "/YOUR_PATH_TO/opencode/mcp/atom-of-thoughts/build/index.js"
      ],
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa,company_research_exa,linkedin_search_exa,deep_researcher_start,deep_researcher_check",
      "enabled": true,
      "headers": {
        "EXA_API_KEY": "{env:EXA_API_KEY}"
      }
    }
  }
}
